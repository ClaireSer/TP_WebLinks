{% extends "layout.html.twig" %}

{% block title %}Form Link{% endblock %}

{% block content %}
    <h2 class="text-center">New link</h2>
    {% if linkForm %} 
        <div class="well">
            {{ form_start(linkForm, { 'attr': {'class': 'form-horizontal form-signin'} }) }}        
                <div class="form-group">
                    {{ form_errors(linkForm.title) }}
                    <label class="col-md-4 control-label" for="link_title">Title</label>
                    <div class="col-md-6">
                        {{ form_widget(linkForm.title, { 'attr':  {
                            'rows': '1',
                            'class': 'form-control',
                            'id': 'link_title',
                        }}) }}
                    </div>
                </div>
                <div class="form-group">                
                    {{ form_errors(linkForm.url) }}
                    <label class="col-md-4 control-label" for="link_url">Url</label>
                    <div class="col-md-6">
                        {{ form_widget(linkForm.url, { 'attr':  {
                            'rows': '1',
                            'class': 'form-control',
                            'id': 'link_url',                                
                        }}) }}
                    </div>                            
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-3">
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>
                </div>
            {{ form_end(linkForm) }}
        </div>


        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

    {% else %}
        <a href="{{ path('login') }} ">Log in</a> to add links.
    {% endif %}
</p>
{% endblock %}